{{#if addNewAnswer}}
<h3>Answer</h3>
<div>
 <form>
   <div class="form-group">
     <label for="content">Answer:</label>
     {{textarea value=content id="content"}}
   </div>
   <div class="form-group">
     <label for="author">Your name:</label>
     {{input value=author id="author"}}
   </div>
   <button class="btn"{{action 'saveAnswer'}}>Save</button>
 </form>
</div>
{{else}}
  <button class="btn"{{action 'answerFormShow'}}>Add your answer.</button>
{{/if}}
