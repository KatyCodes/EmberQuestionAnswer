{{#if addNewQuestion}}
  <hr>
  <h4>New Question:</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Question:</label>
        {{input value=content id="content"}}
      </div>
      <div class="form-group">
        <label for="author">Your name:</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="note">Any additional information you would like to add:</label>
        {{input value=note id="note"}}
      </div>
    </form>
    <button class="btn" {{action 'saveQuestion1'}}>Save</button>
  </div>
  {{else}}
    <button class="btn" {{action 'questionFormShow'}}>Find the answer here.</button>
  {{/if}}
