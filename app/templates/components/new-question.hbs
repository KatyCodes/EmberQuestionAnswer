{{#if addNewQuestion}}
  <h2>Have a question? Post it here for answers:</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Question:</label>
        {{input value=content id="content"}}
      </div>
      <div class="form-group">
        <label for="author">Your name:</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="note">Any additional information you would like to add:</label>
        {{input value=note id="note"}}
      </div>
    </form>
    <button {{action 'saveQuestion1'}}>Save</button>
  </div>
  {{else}}
    <button {{action 'questionFormShow'}}>New ?</button>
  {{/if}}
